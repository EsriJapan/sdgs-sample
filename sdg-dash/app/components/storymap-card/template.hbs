<div class="panel panel-default">
  <div class="panel-heading">
    <div class="pull-left">
    {{model.component.settings.title}}
    </div>
    <div class="pull-right">
      {{#if model.component.settings.data_info}}
        {{data-info-popover model=model.component.settings.data_info}}
      {{/if}}
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="panel-body no-padding">
    <!-- carousel -->
    <div id="carousel-example-generic" class="carousel slide carousel-fade" data-ride="carousel" id="sm-carousel">
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">

        {{#each model.component.settings.thumbnails as |thumbnail index| }}
          <div class="item {{if thumbnail.first_active 'active' }}">
            <!-- <a href="{{model.component.settings.url}}" class="thumbnail" target="_blank"> -->
              <img src="{{thumbnail.url}}" alt="thumbnail">
            <!-- </a> -->
          </div>
        {{/each}}
        
      </div>
    </div>
  </div>
</div>