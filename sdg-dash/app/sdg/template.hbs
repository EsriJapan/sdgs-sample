<div class="container-fluid no-padding">
  <div class="bg-wrapper" style="background-color:{{model.colorHex}};color:white;">
    <div class="row">
      <div class="col-xs-3">
        <img class="img-shift" src="images/sdg/TGG_Icon_Only_Color_{{model.displayNumber}}.gif" height="210" width="210">
      </div>
      <div class="col-xs-7 pad-top-20">
        <div class="row">
          <div class="col-xs-12">
            <h1>SDG {{model.displayNumber}}: {{model.title}}</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <p>{{model.description}}</p>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <button class="btn btn-sm btn-default">
              <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span> How can I Contribute?
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- {{sdg-navigator-bar model=model changeSdg=(action 'changeSdg')}} -->
    <div class="row selector-row" style="background-color:rgba({{model.colorRgb}}, 0.75);">
      <div class="col-xs-1">
        <img class="glyph-sdg-logo" src="images/sdg/main-logo-white40x40.png">
      </div>
      <div class="col-xs-2 country-select-container">
        {{sdg-select-box model=model changeSdg=(action 'changeSdg') }}
      </div>
      <div class="col-xs-1">
        <span class="glyphicon glyphicon-globe glyph-globe-select" aria-hidden="true"></span>
      </div>
      <div class="col-xs-2 country-select-container">
        {{country-select-box model=model goToCountry=(action 'goToCountry')}}
      </div>
      <div class="col-xs-1">
        <span class="glyphicon glyphicon-map-marker glyph-globe-select" aria-hidden="true"></span>
      </div>
      <div class="col-xs-2 country-select-container">
        {{geo-levels-select-box model=model goToGeoLevel="goToGeoLevel" }}
      </div>
      <div class="col-xs-1">
        <span class="glyphicon glyphicon-record glyph-globe-select" aria-hidden="true"></span>
      </div>
      <div class="col-xs-2 country-select-container">
        {{targets-select-button model=model }}
      </div>
    </div>

  </div>
</div>

<div class="row marg-bottom-50">  
  <div class="container status-container">
    <div class="row">
      <div class="col-xs-2 vcenter target-label-container">
        <span class="target-label">{{session.selected_target}}</span>
      </div>
      <div class="col-xs-10 vcenter">
        <h4>{{session.selected_target_description}}</h4>
      </div>
    </div>
    <hr>

    <!-- {{grid-layout cards=session.cards action="noOp"}} -->

    <!-- START fake dashboard -->
    
    <div class="row">
      <div class="col-xs-12 text-center pad-bottom-10">
        <h4>Indicator Dashboard</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="pull-left">
              {{session.map_panel_title}}            
            </div>
            <div class="pull-right">
              <span class="glyphicon glyphicon-info-sign" style="cursor:pointer;" aria-hidden="true" tabindex="0" data-toggle="popover" data-trigger="focus" data-html="true" data-placement="top" data-container="body" data-content={{{session.map_panel_info}}}></span>
            </div>
            <div class="clearfix"></div>
          </div>        
          <div class="panel-body no-padding">
            {{esri-map model=model}}
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="row">
          <div class="col-xs-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <div class="pull-left">
                  {{session.stat_one_title}}
                </div>
                <div class="pull-right">
                  <span class="glyphicon glyphicon-info-sign" style="cursor:pointer;" aria-hidden="true" tabindex="0" data-toggle="popover" data-trigger="focus" data-html="true" data-placement="top" data-container="body" data-content={{{session.stat_one_info}}}></span>
                </div>
                <div class="clearfix"></div>
              </div>
              <div class="panel-body stat-body-height text-center">
                <div>
                  <span class="stat_one stat-value"></span> <span class="stat-perc"> %</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <div class="pull-left">
                  {{session.stat_two_title}}
                </div>
                <div class="pull-right">
                  <span class="glyphicon glyphicon-info-sign" style="cursor:pointer;" aria-hidden="true" tabindex="0" data-toggle="popover" data-trigger="focus" data-html="true" data-placement="top" data-container="body" data-content={{{session.stat_two_info}}}></span>
                </div>
                <div class="clearfix"></div>
              </div>
              <div class="panel-body stat-body-height text-center">
                <div>
                  <span class="stat_two stat-value"></span> <span class="stat-perc"> %</span>
                </div>
              </div>
            </div>
          </div>
        </div>      
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="pull-left">
              {{session.chart_one_title}}
            </div>
            <div class="pull-right">
            <span class="glyphicon glyphicon-info-sign" style="cursor:pointer;" aria-hidden="true" tabindex="0" data-toggle="popover" data-trigger="focus" data-html="true" data-placement="top" data-container="body" data-content={{{session.chart_one_info}}}></span>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="panel-body">
            <div id="chart_one"></div>
          </div>
        </div>
      </div>
    </div>
     
    <!-- END fake dashboard -->

  </div>
</div>