<div class="container-fluid no-padding">
  <div style="background-color:{{model.colorHex}};color:white;">
    <div class="row">
      <div class="col-xs-3">
        <img class="img-shift" src="images/sdg/TGG_Icon_Only_Color_{{model.displayNumber}}.gif" height="210" width="210">
      </div>
      <div class="col-xs-7 pad-top-10">
        <div class="row">
          <div class="col-xs-12">
            <h1>Goal {{model.displayNumber}}: {{model.title}}</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <p>{{model.description}}</p>
          </div>
        </div>
        <!-- <div class="row">
          <div class="col-xs-12 pad-bottom-20">
            {{#if authSession.isAuthenticated}}
              <button class="btn btn-default btn-md" {{action 'signout'}}>Sign Out</button>
            {{else}}
              <button class="btn btn-default btn-md" {{action 'signin'}}>Sign In</button>
            {{/if}}
          </div>
        </div> -->
      </div>
    </div>

    <div class="row selector-row" style="background-color:rgba({{model.colorRgb}}, 0.75);">
      <div class="col-xs-1">
        <!-- <img class="glyph-sdg-logo" src="images/sdg/main-logo-white40x40.png"> -->
        {{#link-to 'sdg-overview'}}
          <img class="glyph-sdg-logo img-dp-shadow" src='images/landing/sdg-logo-only.png'>
        {{/link-to}}
      </div>
      <div class="col-xs-2 country-select-container">
        {{sdg-select-box model=model changeSdg=(action 'changeSdg') }}
      </div>
      <div class="col-xs-1">
        <span class="glyphicon glyphicon-globe glyph-globe-select" aria-hidden="true"></span>
      </div>
      <div class="col-xs-2 country-select-container">
        <!-- {{country-select-box model=model goToGeography=(action 'goToGeography')}} -->
        {{geography-search-box model=model goToGeography=(action 'goToGeography')}}
      </div>
      <div class="col-xs-1">
        <span class="glyphicon glyphicon-map-marker glyph-globe-select" aria-hidden="true"></span>
      </div>
      <div class="col-xs-2 country-select-container">
        {{geo-levels-select-box model=model goToGeoLevel="goToGeoLevel" }}
      </div>
      <div class="col-xs-1">
        <span class="glyphicon glyphicon-record glyph-globe-select" aria-hidden="true"></span>
      </div>
      <div class="col-xs-2 country-select-container">
        {{targets-select-button model=model }}
      </div>
    </div>

  </div>
</div>

<div class="row marg-bottom-50" style="height: 100;">  
  <div class="container status-container">
    {{#unless (eq model.selected_target.id "SDG Index") }}
    
    <div class="row">
      <div class="col-xs-2 vcenter target-label-container">
        <span class="target-label">{{model.selected_target.id}}</span>
      </div>
      <div class="col-xs-10 vcenter">
        <h4>{{model.selected_target.title}}</h4>
      </div>
    </div>
    <hr>
    {{/unless}}

    {{#if session.cards.length}}
      {{grid-layout model=model cards=session.cards action="noOp"}}
    {{else}}
      {{no-data-card}}
    {{/if}}

  </div>
</div>

{{#ember-wormhole to="targets-modal-destination"}}
  {{targets-select-modal changeTarget=(action 'changeTarget')}}
{{/ember-wormhole}}

{{#ember-wormhole to="contribute-modal-destination"}}
  {{contribute-modal}}
{{/ember-wormhole}}